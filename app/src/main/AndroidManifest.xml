<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.sdl.primer">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".PrimerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:appComponentFactory"
        android:appComponentFactory="whateverString">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.ViewDragHelperActivity">
        </activity>
        <activity android:name=".ui.activity.CustomViewActivity">
        </activity>
        <activity android:name=".ui.activity.ReverseColorProgressActivity">
        </activity>
        <activity android:name=".ui.activity.CheckPermissionsActivity">
        </activity>
        <activity android:name=".newnothing.WebPActivity">
        </activity>
        <activity
            android:name=".ui.activity.SlidingPaneLayoutActivity"
            android:theme="@style/Theme.AppCompat.Translucent">
        </activity>
        <activity android:name=".ipc.TcpClientActivity">
        </activity>

        <service
            android:name=".ipc.TCPServerService"
            android:process=":remote"/>

        <activity android:name=".animator.RecyclerViewActivity">
        </activity>
        <activity android:name=".ui.activity.ReuseBitmapActivity">
        </activity>
        <activity android:name=".ui.activity.CalendarActivity">
        </activity>
        <activity
            android:name=".ui.activity.SampleTitleBehaviorActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar">
        </activity>
        <activity
            android:name=".ui.activity.BehaviorAdvanceActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar">
        </activity>
        <activity android:name=".ui.activity.BannerActivity">
        </activity>
        <activity android:name=".livedata.NameActivity">
        </activity>
        <activity android:name=".livedata.UserProfileActivity">
        </activity>
        <activity android:name=".livedata2.RecyclerViewActivity">
        </activity>
        <activity android:name=".livedata3.DemoActivity">
        </activity>
        <activity android:name=".livedata3.LiveDataActivity">
        </activity>
        <activity android:name=".navigation.NavigationActivity">
        </activity>
        <activity android:name=".navigation.SettingActivity">
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_reverse_color_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sdl.primer.ui.activity.ReverseColorProgressActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.sdl.primer.ui.customview.ReverseColorProgress
        android:layout_width="@dimen/dp150"
        android:layout_height="@dimen/dp150"
        app:circleWidth="@dimen/dp6"
        app:firstColor="@color/colorAccent"
        app:secondColor="@color/colorPrimary"
        app:speed="20"
        android:visibility="gone"/>

    <com.sdl.primer.ui.customview.SmallProgressBar
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_marginTop="@dimen/dp50"/>

</LinearLayout>
